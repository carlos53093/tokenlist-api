{
  "name": "tokenlist-api",
  "version": "1.0.0",
  "repository": "https://github.com/Instadapp/tokenlist-api",
  "main": "dist/app.js",
  "scripts": {
    "build": "NODE_ENV=production tsc -p tsconfig.json",
    "start": "node -r tsconfig-paths/register ./dist/app.js",
    "dev": "NODE_ENV=development nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "husky install"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src/app.ts"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "husky": "^8.0.1",
    "multer": "^1.4.3",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.1",
    "eslint": "^8.16.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.13",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx prettier --write . && npm run lint:fix && git add -A ."
    }
  }
}
